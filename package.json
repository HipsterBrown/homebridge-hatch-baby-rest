{
  "name": "homebridge-hatch-baby-rest-repo",
  "private": true,
  "scripts": {
    "test": "turbo run test",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "version": "changeset version && npm i",
    "release": "turbo run test lint build && changeset publish",
    "example": "ts-node ./packages/examples/example.ts",
    "plus-example": "ts-node ./packages/examples/rest-plus-example.ts",
    "hb": "npm run build && TEST_HOMEBRIDGE=true homebridge -P ./packages/homebridge-hatch-baby-rest -U ./.homebridge",
    "push-with-tags": "git push --follow-tags && node ./build/github-releaser.js",
    "deploy": "standard-version && npm publish && npm run push-with-tags",
    "deploy-beta": "standard-version --prerelease beta && npm publish --tag beta && npm run push-with-tags"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm run build && npm test"
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2",
    "@types/aws-iot-device-sdk": "2.2.4",
    "@types/chai": "4.3.4",
    "@types/debug": "4.1.7",
    "@types/mocha": "10.0.0",
    "@types/node": "18.11.9",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.43.0",
    "chai": "4.3.7",
    "conventional-github-releaser": "3.1.5",
    "dotenv": "16.0.3",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "homebridge": "1.5.1",
    "homebridge-config-ui-x": "4.50.2",
    "mocha": "10.1.0",
    "prettier": "2.7.1",
    "standard-version": "9.5.0",
    "ts-essentials": "9.3.0",
    "ts-node": "10.9.1",
    "turbo": "^1.6.3",
    "typescript": "4.9.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
